@model SKNManager.Models.EquipmentViewModels.Equipment

@{
    ViewData["Title"] = Html.DisplayFor(model => model.Name);
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <div class="col-sm-12 col-md-12 content-window">
            <h2 class="text-center page-header">@ViewData["Title"]</h2>
            
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.EquipmentSet)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EquipmentSet.Name)
                </dd>
            </dl>
            <a class="btn btn-default" asp-action="Index">Powrót</a>
            <a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>            
        </div>
    </div>
</div>
