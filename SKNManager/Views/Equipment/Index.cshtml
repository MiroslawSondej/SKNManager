@model IEnumerable<SKNManager.Models.EquipmentViewModels.Equipment>

@{
    ViewData["Title"] = "Wyposażenie koła";
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <span class="col-sm-12 col-md-12 content-window" />
        <h2 class="text-center page-header">@ViewData["Title"]</h2>
        <a class="btn btn-default pull-right" href="@Url.Action("Create", "Equipment")">Dodaj nowy sprzęt</a>
        <a class="btn btn-default pull-right" href="@Url.Action("Index", "EquipmentSet")">Zestawy</a>

        @*<form asp-action="Index" class="pull-left"> 
            <p>Costam</p>  
            <input />
        </form>*@
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EquipmentSet)
                    </th>
                    <th>Zarządzanie</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EquipmentSet.Name)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |                            
                            <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
