@model InviteViewModel
<form asp-controller="Account" asp-action="Invite" asp-route-returnurl="@Url.Action("Index", "Member")" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-block">Zaproś</button>
        </div>
    </div>
</form>