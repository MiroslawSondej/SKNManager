@{ 
    Layout = "~/Views/Shared/_LoginPageLayout.cshtml";
    ViewData["Title"] = "Rejestracja zakończona";
}
<div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-0 col-md-12">
        <div class="col-sm-12 col-md-6 col-md-offset-3 content-window">
            <h2 class="text-center page-header">@ViewData["Title"]</h2>
            <p class="text-center">
                Dziękujemy za rejestrację w systemie. Twoje konto zostało utworzone pomyślnie. <br />
                Proszę <a asp-controller="Account" asp-action="Login">kliknij tutaj aby się zalogować</a>.
            </p>
        </div>
    </div>
</div>
