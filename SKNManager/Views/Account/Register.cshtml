@model RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
    Layout = "~/Views/Shared/_LoginPageLayout.cshtml";
}

<div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-0 col-md-12">
        <div class="col-md-6 col-md-offset-3 content-window">
            <h2 class="text-center page-header">@ViewData["Title"]</h2>
            <section>
                <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="UserId" name="UserId" />
                    <input type="hidden" asp-for="Code" name="Code" />

                    <div class="col-md-12">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
                            <input asp-for="Email" class="form-control" value="@Model.Email" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
                            <input asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
                            <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.FirstName)" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
                            <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.LastName)" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
                            <button type="submit" class="btn btn-block">Zarejestruj</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
